@page "/"
@using DailyJournalApp.Models
@using DailyJournalApp.Services
@inject DatabaseService DbService
@inject NavigationManager NavManager

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">My Journal</h2>
            <p class="text-muted small">Capture your daily thoughts</p>
        </div>
        <button class="btn btn-primary shadow-sm" @onclick="GoToAdd">
            <i class="bi bi-plus-lg"></i> + New Entry
        </button>
    </div>

    @if (entries == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Loading your memories...</p>
        </div>
    }
    else if (entries.Count == 0)
    {
        <div class="text-center mt-5 p-5 bg-light rounded-3 border border-dashed">
            <h4 class="text-muted">It's quiet here...</h4>
            <p>Start your streak by writing your first entry!</p>
            <button class="btn btn-outline-primary mt-2" @onclick="GoToAdd">Start Writing</button>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var entry in entries)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted fw-bold">@entry.Date.ToString("MMM dd, yyyy")</small>
                                <span class="badge rounded-pill bg-light text-dark border">
                                    @GetMoodEmoji(entry.PrimaryMood) @entry.PrimaryMood
                                </span>
                            </div>

                            <h5 class="card-title fw-bold text-dark">@entry.Title</h5>

                            <p class="card-text text-muted flex-grow-1" style="font-size: 0.95rem;">
                                @(entry.Content.Length > 80 ? entry.Content.Substring(0, 80) + "..." : entry.Content)
                            </p>

                            <div class="d-flex justify-content-end gap-2 mt-3 pt-2 border-top">
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => EditEntry(entry.Id)">
                                    Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteEntry(entry.Id)">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<JournalEntry> entries;

    protected override async Task OnInitializedAsync()
    {
        entries = await DbService.GetEntriesAsync();
    }

    private void GoToAdd() => NavManager.NavigateTo("/add");

    private void EditEntry(int id) => NavManager.NavigateTo($"/edit/{id}");

    
    private async Task DeleteEntry(int id)
    {
        bool confirm = await Application.Current.MainPage.DisplayAlert("Delete?", "Confirm delete?", "Yes", "No");
        if (confirm)
        {
            // Call the updated Service method
            await DbService.DeleteEntryAsync(id);

            // CRITICAL: Reload the list so the UI updates!
            entries = await DbService.GetEntriesAsync();
        }
    }
    private string GetMoodEmoji(string mood) => mood switch
    {
        "Happy" => "😊",
        "Excited" => "🤩",
        "Sad" => "😢",
        "Stressed" => "😫",
        "Grateful" => "🙏",
        _ => "😐"
    };
}

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>